{
  "expo": {
    "name": "Delta",
    "slug": "delta-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "sdkVersion": "54.0.0",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.delta.health",
      "buildNumber": "1",
      "icon": "./assets/icon.png",
      "infoPlist": {
        "NSHealthShareUsageDescription": "Delta uses health data to provide personalized wellness insights and track your fitness progress.",
        "NSHealthUpdateUsageDescription": "Delta can log your workouts and health metrics to Apple Health.",
        "NSPhotoLibraryUsageDescription": "Delta needs access to your photo library to set a profile picture.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": []
      }
    },
    "android": {
      "package": "com.delta.health",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      }
    },
    "platforms": ["ios", "android"],
    "extra": {
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      }
    },
    "owner": "delta-health",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/YOUR_EAS_PROJECT_ID"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Delta needs access to your photos to set a profile picture."
        }
      ]
    ]
  }
}
